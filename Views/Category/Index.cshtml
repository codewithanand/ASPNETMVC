@model List<Category>

<div class="row pt-4 mb-3">
    <div class="col-6">
        <h3>Categories</h3>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Category Name</th>
                        <th>Display Order</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var category in Model)
                    {
                        <tr>
                            <td>@category.CategoryName</td>
                            <td>@category.DisplayOrder</td>
                            <td>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary"><i class="bi bi-pencil-square"></i> Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
